<h1><%= @foundation.name %></h1>

<div class="card">
  <div class="card-body">
    <p class="card-text"><strong>Address:</strong> <%= @foundation.address %>, <%= @foundation.city %>, <%= @foundation.state %> <%= @foundation.zipcode %></p>
    <p class="card-text"><strong>Latitude:</strong> <%= @foundation.latitude %></p>
    <p class="card-text"><strong>Longitude:</strong> <%= @foundation.longitude %></p>
    <p class="card-text"><strong>Description:</strong> <%= @foundation.description %></p>
    <p class="card-text"><strong>Category:</strong> <%= @foundation.category %></p>
  </div>
</div>

<div id="map" class="mt-4" style="height: 400px;"></div>

<script>
  function initMap() {
    var latitude = <%= @foundation.latitude %>;
    var longitude = <%= @foundation.longitude %>;

    var map = new google.maps.Map(document.getElementById('map'), {
      center: { lat: latitude, lng: longitude },
      zoom: 12
    });

    var marker = new google.maps.Marker({
      position: { lat: latitude, lng: longitude },
      map: map,
      title: 'Foundation Location'
    });
  }
</script>

<!-- Include the Google Maps API -->
<script src="https://maps.googleapis.com/maps/api/js?key=YOUR_API_KEY&callback=initMap" async defer></script>
